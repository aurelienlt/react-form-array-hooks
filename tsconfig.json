{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2019"],
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "jsx": "react-jsx",
    "declaration": true
  },
  "exclude": ["./lib"],
  "include": ["./src"]
}
